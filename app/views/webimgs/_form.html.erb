<%= form_for(@webimg) do |f| %>
  <% if @webimg.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@webimg.errors.count, "error") %> prohibited this webimg from being saved:</h2>

      <ul>
	  <!-- Paperclip validation errors-->
      <!-- and custom validation errors show up here -->
      <% @webimg.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <!-- Upload your avatar via a remote url in a form_tag -->
  <div class="field">
	  Provide a URL for Your Avatar: <%= text_field_tag 'avatar_url' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>